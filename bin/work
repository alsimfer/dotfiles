#!/usr/bin/env bash

set -eEu -o pipefail

tmux new -s work -d
tmux new-window -n mail -t work:1
tmux send-keys -t mail "mutt" C-m
tmux split-window -h -t mail
tmux send-keys -t mail "ikhal" C-m
tmux split-window -v -t mail
tmux send-keys -t mail "vim ~/todo.md" C-m
#tmux new-window -n cal -t work:2
#tmux send-keys -t cal "ikhal" C-m
tmux new-window -n news -t work:2
tmux send-keys -t news "newsboat" C-m
tmux new-window -n chat -t work:3
tmux send-keys -t chat "weechat" C-m
tmux select-window -t 0

tmux attach -t work
